<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Liste des Thèmes</title>
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" href="{{ path('home') }}">Accueil</a>
                <div class="collapse navbar-collapse justify-content-end">
                    <ul class="navbar-nav">
                        {% if app.user %}
                            <li class="nav-item">
                                <span class="navbar-text text-white me-3">Connecté en tant que {{ app.user.userIdentifier }}</span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger" href="{{ path('app_logout') }}">Déconnexion</a>
                            </li>
                        {% else %}
                            <li class="nav-item">
                                <a class="btn btn-primary" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
        <h1>Liste des Thèmes</h1>
        <ul>
            {% for theme in themes %}
                <li>{{ theme.theme }}</li>
            {% endfor %}
        </ul>
    </body>
</html>
