{% extends 'base.html.twig' %}

{% block title %}{{ 'emails.title'|trans }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center text-primary">{{ 'emails.list'|trans }}</h1>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <ul class="list-group">
                    {% for user in emails %}
                        <li class="list-group-item">{{ user.email }}</li>
                    {% else %}
                        <li class="list-group-item list-group-item-danger text-center">{{ 'emails.no_emails'|trans }}</li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </div>
{% endblock %}