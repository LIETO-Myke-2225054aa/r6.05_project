{% extends 'base.html.twig' %}

{% block title %}{{ 'form.register'|trans }}{% endblock %}

{% block body %}
    <h1 class="h3 mb-3 font-weight-normal">{{ 'form.register'|trans }}</h1>

    {{ form_start(registrationForm) }}
    <div class="mb-3">
        <label>{{ 'form.email'|trans }}</label>
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="mb-3">
        <label>{{ 'form.password'|trans }}</label>
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
    </div>


    {{ form_row(registrationForm.submit, {'attr': {'class': 'btn btn-primary btn-lg btn-block'}}) }}

    {{ form_end(registrationForm) }}

    <p class="mt-3">
        {{ 'form.already_registered'|trans }} <a href="{{ path('app_login') }}">{{ 'form.login'|trans }}</a>
    </p>
{% endblock %}
